<!DOCTYPE html>
<html>
  <head>
    <title>GoalApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= current_user.username %>
      <%= button_to "Log Out", session_url, method: :delete %>
    <% else %>
      <%= link_to "Log In", new_session_url %>
    <% end %>
    <% flash[:errors].try(:each) do |err| %>
      <%= err %>
    <% end %>
    <%= yield %>
  </body>
</html>
